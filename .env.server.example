# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# SMTP Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="your-email@gmail.com"
SMTP_FROM_NAME="Non-Linear Chatbot"

# Additional Auth Settings
JWT_SECRET="your-jwt-secret-key-here"

# OpenAI API Configuration
OPENAI_API_KEY="your-openai-api-key-here"

# Summary Generation Configuration
SUMMARY_MODEL="gpt-4.1-mini"
SUMMARY_TOKEN=100
SUMMARY_PROMPT="Briefly summarize the content from the conversation in 1 sentences. Focus only on the key concepts, not on who said what."

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=3600000  # 1 hour in milliseconds
RATE_LIMIT_MAX_REQUESTS=100   # Maximum requests per window

# CORS Configuration
# Note: Wasp uses WASP_WEB_CLIENT_URL for CORS in production
WASP_WEB_CLIENT_URL="https://your-frontend-domain.com"