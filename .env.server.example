# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
JWT_SECRET="your-jwt-secret-key-here"

# SMTP Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="your-email@gmail.com"
SMTP_FROM_NAME="Non-Linear Chatbot"

# Additional Auth Settings
JWT_SECRET="your-jwt-secret-key-here"

# Summary Configuration
# Summary provider, model, tokens, and prompt are now configured in src/summaryConfig.js

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=3600000 # 1 hour in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# CORS Configuration
# Note: Wasp uses WASP_WEB_CLIENT_URL for CORS in production
WASP_WEB_CLIENT_URL="https://your-frontend-domain.com"

# For Development Only!
SKIP_EMAIL_VERIFICATION_IN_DEV=true

############### MODEL API KEY CONFIG ###############
# OpenAI API Configuration
OPENAI_API_KEY="your-openai-api-key"

# Gemini API Configuration
GEMINI_API_KEY="your-gemini-api-key"

# Local Model Doesn't need real API keys, any value works
OLLAMA_API_KEY=local-dummy-key
